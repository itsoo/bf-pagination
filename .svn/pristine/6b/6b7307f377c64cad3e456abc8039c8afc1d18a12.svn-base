package com.sncfc.baseframework.pageplugin.core;

import com.sncfc.baseframework.pageplugin.PageInfo;
import com.sncfc.baseframework.pageplugin.util.ReflectHelpers;
import org.aspectj.lang.ProceedingJoinPoint;
import org.aspectj.lang.annotation.Around;
import org.aspectj.lang.annotation.Aspect;
import org.springframework.stereotype.Component;

import java.util.List;

/**
 * 分页切面
 *
 * @author zxy
 */
@Aspect
@Component
public class PageAspect {

    @Around("@annotation(com.sncfc.baseframework.pageplugin.core.Page)")
    public Object around(ProceedingJoinPoint point) throws Throwable {
        Object[] objects = point.getArgs();
        // 分页参数索引
        int index = getTargetIndex(point.getArgs());
        // 未得到分页参数
        if (index == -1) {
            PageInfo pageInfo;
            for (Object object : objects) {
                pageInfo = handlePageInfo(point.proceed(), object);
                if (pageInfo != null) {
                    return pageInfo;
                }
            }

            return null;
        }

        return handlePageInfo(point.proceed(), objects[index]);
    }

    private int getTargetIndex(Object[] objects) {
        for (int i = 0, len = objects.length; i < len; i++) {
            Object obj = objects[i];
            if (obj instanceof PageInfo) {
                if (hasKeyOfPageInfo((PageInfo) obj)) {
                    return i;
                }

                continue;
            }

            if (hasKeyOfPageInfo(ReflectHelpers.getFieldValue(obj))) {
                return i;
            }
        }

        return -1;
    }

    private boolean hasKeyOfPageInfo(PageInfo pageInfo) {
        return pageInfo != null && pageInfo.getPageNum() != null;
    }

    private PageInfo handlePageInfo(Object src, Object obj) {
        // 参数为 Map 类型
        PageInfo pageInfo;
        if (obj instanceof PageInfo) {
            ((PageInfo) obj).setDataList((List) src);
            return ((PageInfo) obj);
        } else { // 参数为其它 Bean
            pageInfo = ReflectHelpers.getFieldValue(obj);
            ReflectHelpers.setFieldValue(obj, pageInfo);
        }

        return pageInfo;
    }
}
